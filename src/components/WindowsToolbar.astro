---
// This component does NOT import or use Layout.astro. This breaks the loop.
---
<div class="windows-toolbar">
  <div class="start-button-container">
    <button class="start-button" type="button" aria-haspopup="true" aria-expanded="false" aria-label="BitMedic Menu">
      <img src="/icons/bitmedic_logo2-onlylogo_transparent.svg" alt="BitMedic Menu" class="start-icon" />
      <span>BitMedic</span>
    </button>
    <div class="start-menu" role="menu">
      <ul>
        <li><a href="/about/" role="menuitem"><img src="/icons/about_icon.svg" alt="" class="start-menu-icon" />About</a></li>
        <li><a href="https://docs.google.com/forms/d/e/1FAIpQLSe87Vmx4OSsn1eQ8zh0XDLioe3Q-O6dLpIm2Ov_m60BSitE7A/viewform?usp=header" role="menuitem"><img src="/icons/contact_icon.svg" alt="" class="start-menu-icon" />Contact</a></li>
        <li><a href="https://docs.google.com/document/d/1CuhgR8WH7JFDy9haHn_TM6TTR5rR2eo5R5MSCTVZ9Zc/edit?usp=sharing" role="menuitem"><img src="/icons/tech_icon.svg" alt="" class="start-menu-icon" />Recommended Tech</a></li>
        <!-- <li><a href="/merch/" role="menuitem"><img src="/icons/merch_icon.svg" alt="" class="start-menu-icon" />Merch</a></li> -->
        <li class="divider"><hr /></li>
        <li><a href="https://search.brave.com/" target="_blank" rel="noopener noreferrer" role="menuitem"><img src="/icons/log_off_icon.svg" alt="" class="start-menu-icon" />Log Off...</a></li>
      </ul>
    </div>
  </div>

  <a href="https://bitmedic.beehiiv.com/" target="_blank" rel="noopener noreferrer" class="taskbar-button"><img src="/icons/newsletter_icon.svg" alt="Newsletter" class="taskbar-button-icon" /><span class="taskbar-button-text">Newsletter</span></a>
  <a href="https://docs.google.com/forms/d/e/1FAIpQLScNDbDYapyV-Y7urRlqsYrrd-nzLDmzPl53c2kyx0FD4O3qhA/viewform?usp=header" target="_blank" rel="noopener noreferrer" class="taskbar-button"><img src="/icons/form_icon.svg" alt="Feedback" class="taskbar-button-icon" /><span class="taskbar-button-text">Feedback</span></a>

  <div class="clock-container"><span class="clock-time"></span></div>
</div>

<style>
  .windows-toolbar {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: var(--taskbar-height);
    background-color: #c0c0c0;
    border-top: 2px solid #ffffff;
    box-shadow: inset 0 1px 1px #dfdfdf;
    display: flex;
    align-items: center;
    padding: 0 6px;
    font-family: 'Tahoma', 'Geneva', 'MS Sans Serif', sans-serif;
    z-index: 10000;
  }
  .start-button-container {
    position: relative;
    height: 100%;
    display: flex;
    align-items: center;
  }
  .start-button {
    appearance: none;
    -webkit-appearance: none;
    background-color: #0058a8;
    border: 2px outset #3b8bcd;
    padding: 0 14px;
    margin-left: 3px;
    display: flex;
    align-items: center;
    cursor: pointer;
    font-weight: bold;
    color: #ffffff;
    height: 38px;
  }
  .start-button:active {
    border-style: inset;
  }
  .start-icon {
    width: 24px;
    height: 24px;
    margin-right: 8px;
  }
  .start-menu {
    display: none;
    position: absolute;
    bottom: 100%;
    left: 0;
    width: 300px;
    background-color: #c0c0c0;
    border: 2px outset #f0f0f0;
    box-shadow: 3px 3px 6px rgba(0,0,0,0.3);
    padding: 5px;
    z-index: 1001;
  }
  .start-button-container:hover .start-menu,
  .start-button:focus + .start-menu,
  .start-menu:hover {
    display: block;
  }
  .start-menu ul {
    list-style: none;
  }
  .start-menu li a {
    display: flex;
    align-items: center;
    padding: 8px 12px;
    color: #000000;
    text-decoration: none;
  }
  .start-menu-icon {
    width: 22px;
    height: 22px;
    margin-right: 10px;
  }
  .start-menu li a:hover {
    background-color: #0058a8;
    color: #ffffff;
  }
  .start-menu li.divider hr {
    border: 0;
    border-top: 1px solid #808080;
    border-bottom: 1px solid #ffffff;
    margin: 6px 1px;
  }
  .taskbar-button {
    display: flex;
    align-items: center;
    height: 36px;
    border: 2px outset #f0f0f0;
    padding: 0 10px;
    margin-left: 5px;
    color: #000000;
    text-decoration: none;
    max-width: 180px;
    transition: background-color 0.1s ease, color 0.1s ease;
  }
  .taskbar-button:active {
    border-style: inset;
  }
  .taskbar-button-icon {
    width: 18px;
    height: 18px;
    margin-right: 6px;
  }

  /* --- ADDED/CORRECTED HOVER EFFECT --- */
  .taskbar-button:hover,
  .taskbar-button:focus-visible {
    background-color: #0058a8; /* Same blue as the start button */
    color: #ffffff; /* White text for contrast */
  }
  /* This rule makes the icon white on hover too */
  .taskbar-button:hover .taskbar-button-icon,
  .taskbar-button:focus-visible .taskbar-button-icon {
    filter: brightness(0) invert(1);
  }

  .clock-container {
    margin-left: auto;
    height: 38px;
    border: 2px inset #808080;
    display: flex;
    align-items: center;
    padding: 0 6px;
  }

  @media (max-width: 600px) {
    .windows-toolbar {
      --taskbar-height: 40px;
    }
    .start-button, .taskbar-button, .clock-container {
      height: 32px;
    }
  }
</style>

<script client:load>
  // Select the clock element directly.
  const clockTimeElement = document.querySelector('.windows-toolbar .clock-time');

  // Check if the element exists before doing anything.
  if (clockTimeElement) {
    const updateClock = () => {
      const now = new Date();
      // Format time for your local timezone (PDT)
      const timeString = now.toLocaleTimeString('en-US', {
        hour: 'numeric',
        minute: '2-digit',
        hour12: true,
        timeZone: 'America/Los_Angeles' 
      });
      clockTimeElement.textContent = timeString;
    };

    // This safeguard prevents multiple clock intervals from running at the same time,
    // which can happen during development with hot-reloading.
    if (window.clockInterval) {
      clearInterval(window.clockInterval);
    }

    // Run the clock immediately and then set it to update every second.
    updateClock();
    window.clockInterval = setInterval(updateClock, 1000);
  }
</script>