---
// src/components/WindowsToolbar.astro

// No image import needed as it's in the `public` folder.

// For the clock - this will be static (time of the last site build).
// For a live, updating clock, client-side JavaScript would be needed.
const buildTime = new Date().toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' });
---

<div class="windows-toolbar">
  <div class="start-button-container">
    <button class="start-button" type="button" aria-haspopup="true" aria-expanded="false" aria-label="Start Menu">
      {/* === Corrected Image Path Below === */}
      <img src="/BitMedic/bitmedic_logo2-onlylogo_transparent.svg" alt="Start" class="start-icon" />
      Start
    </button>
    <div class="start-menu" role="menu">
      <ul>
        <li><a href="/about/" role="menuitem">About</a></li>
        <li><a href="/contact/" role="menuitem">Contact</a></li>
        <li><a href="/tech/" role="menuitem">Recommended Tech</a></li>
        <li><a href="/merch/" role="menuitem">Merch</a></li>
        <li class="divider"><hr /></li>
        <li><a href="https://search.brave.com/" target="_blank" rel="noopener noreferrer" role="menuitem">Log Off...</a></li>
      </ul>
    </div>
  </div>

  <div class="clock-container">
    <span class="clock-time">{buildTime}</span>
  </div>
</div>

<style>
  .windows-toolbar {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 30px;
    background-color: #c0c0c0;
    border-top: 2px solid #ffffff;
    box-shadow: inset 0 1px 1px #dfdfdf;
    display: flex;
    align-items: center;
    padding: 0 3px;
    font-family: 'Tahoma', 'Geneva', 'MS Sans Serif', sans-serif;
    font-size: 12px;
    color: #000000;
    z-index: 1000;
    box-sizing: border-box;
  }

  .start-button-container {
    position: relative;
    height: 100%;
    display: flex;
    align-items: center;
  }

  .start-button {
    background-color: #c0c0c0;
    border-width: 2px;
    border-style: outset;
    border-color: #f0f0f0 #808080 #808080 #f0f0f0;
    padding: 2px 6px;
    margin-left: 2px;
    display: flex;
    align-items: center;
    cursor: pointer;
    font-weight: bold;
    font-family: inherit;
    font-size: inherit;
    height: calc(100% - 4px);
    box-sizing: border-box;
  }

  .start-button:active {
    border-style: inset;
  }

  .start-icon {
    width: 16px;
    height: 16px;
    margin-right: 4px;
    object-fit: contain;
  }

  .start-menu {
    display: none;
    position: absolute;
    bottom: calc(100% + 2px);
    left: 0;
    width: 220px;
    background-color: #c0c0c0;
    border-width: 2px;
    border-style: outset;
    border-color: #f0f0f0 #808080 #808080 #f0f0f0;
    box-shadow: 2px 2px 5px rgba(0,0,0,0.3);
    padding: 2px;
    z-index: 1001;
    font-size: 12px;
  }

  .start-button-container:hover .start-menu,
  .start-button:focus + .start-menu,
  .start-menu:hover {
    display: block;
  }

  .start-menu ul {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .start-menu li a {
    display: flex;
    align-items: center;
    padding: 4px 25px 4px 10px;
    text-decoration: none;
    color: #000000;
    white-space: nowrap;
  }

  .start-menu li a:hover {
    background-color: #000080;
    color: #ffffff;
  }

  .start-menu li.divider hr {
    border: 0;
    border-top: 1px solid #808080;
    border-bottom: 1px solid #ffffff;
    margin: 3px 1px;
  }

  .clock-container {
    margin-left: auto;
    padding: 2px 5px;
    height: calc(100% - 4px);
    border-width: 2px;
    border-style: inset;
    border-color: #808080 #f0f0f0 #f0f0f0 #808080;
    display: flex;
    align-items: center;
    justify-content: center;
    min-width: 60px;
    box-sizing: border-box;
    margin-right: 2px;
  }
  .clock-time {
    /* Additional styles for the time text if needed */
  }
</style>
