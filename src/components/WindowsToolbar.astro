---
// src/components/WindowsToolbar.astro

// For the clock - this will be static (time of the last site build).
// For a live, updating clock, client-side JavaScript would be needed.
const buildTime = new Date().toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' });
---

<div class="windows-toolbar">
  <div class="start-button-container">
    <button class="start-button" type="button" aria-haspopup="true" aria-expanded="false" aria-label="Start Menu">
      <img src="/BitMedic/bitmedic_logo2-onlylogo_transparent.svg" alt="Start" class="start-icon" />
      Start
    </button>
    <div class="start-menu" role="menu">
      <ul>
        <li><a href="/BitMedic/about/" role="menuitem">About</a></li>
        <li><a href="/BitMedic/contact/" role="menuitem">Contact</a></li>
        <li><a href="/BitMedic/tech/" role="menuitem">Recommended Tech</a></li>
        <li><a href="/BitMedic/merch/" role="menuitem">Merch</a></li>
        <li class="divider"><hr /></li>
        <li><a href="https://search.brave.com/" target="_blank" rel="noopener noreferrer" role="menuitem">Log Off...</a></li>
      </ul>
    </div>
  </div>

  <div class="clock-container">
    <span class="clock-time">{buildTime}</span>
  </div>
</div>

<style>
  .windows-toolbar {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 40px; /* Toolbar height set to 40px */
    background-color: #c0c0c0;
    border-top: 2px solid #ffffff;
    box-shadow: inset 0 1px 1px #dfdfdf;
    display: flex;
    align-items: center;
    padding: 0 5px; /* Adjusted padding */
    font-family: 'Tahoma', 'Geneva', 'MS Sans Serif', sans-serif;
    font-size: 15px; /* Base font size for toolbar increased to 15px */
    color: #000000;
    z-index: 1000;
    box-sizing: border-box;
    line-height: normal;
  }

  .start-button-container {
    position: relative;
    height: 100%;
    display: flex;
    align-items: center;
  }

  .start-button {
    appearance: none;
    -webkit-appearance: none;
    -moz-appearance: none;

    background-color: #c0c0c0;
    border-width: 2px;
    border-style: outset;
    border-color: #f0f0f0 #808080 #808080 #f0f0f0;
    padding: 3px 12px; /* Adjusted padding */
    margin: 0;
    margin-left: 3px; /* Slightly more margin */
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    font-weight: bold;
    font-family: inherit;
    font-size: inherit;   /* Will be 15px */
    color: #000000;
    height: 32px; /* Explicit height for button within 40px toolbar */
    box-sizing: border-box;
    line-height: normal;
    white-space: nowrap;
    user-select: none;
    -webkit-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
  }

  .start-button:active {
    border-style: inset;
    padding: 4px 11px 2px 13px; /* Adjusted active padding */
  }

  .start-button:focus {
    outline: 1px dotted #000000;
    outline-offset: -4px;
  }
  .start-button::-moz-focus-inner {
    border: 0;
    padding: 0;
  }

  .start-icon {
    width: 22px; /* Increased icon size */
    height: 22px; /* Increased icon size */
    margin-right: 7px; /* Increased margin */
    object-fit: contain;
    display: inline-block;
    vertical-align: middle;
  }

  .start-menu {
    display: none;
    position: absolute;
    bottom: calc(100% + 3px); /* Position above button container, adjusted for toolbar height */
    left: 0;
    width: 280px; /* Increased width */
    background-color: #c0c0c0;
    border-width: 2px;
    border-style: outset;
    border-color: #f0f0f0 #808080 #808080 #f0f0f0;
    box-shadow: 3px 3px 6px rgba(0,0,0,0.3);
    padding: 4px; /* Increased padding */
    z-index: 1001;
    font-size: 15px; /* Increased menu font size */
    text-align: left;
  }

  .start-button-container:hover .start-menu,
  .start-button:focus + .start-menu,
  .start-menu:hover {
    display: block;
  }

  .start-menu ul {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .start-menu li {
    margin: 0;
    padding: 0;
  }

  .start-menu li a {
    display: flex;
    align-items: center;
    padding: 7px 35px 7px 18px; /* Increased padding for menu items */
    text-decoration: none;
    color: #000000;
    white-space: nowrap;
  }

  .start-menu li a:hover {
    background-color: #000080;
    color: #ffffff;
  }

  .start-menu li.divider hr {
    border: 0;
    border-top: 1px solid #808080;
    border-bottom: 1px solid #ffffff;
    margin: 5px 1px; /* Increased margin */
    height: 0px;
  }

  .clock-container {
    margin-left: auto;
    padding: 2px 10px; /* Increased padding */
    height: 32px; /* Explicit height to match Start button */
    border-width: 2px;
    border-style: inset;
    border-color: #808080 #f0f0f0 #f0f0f0 #808080;
    display: flex;
    align-items: center;
    justify-content: center;
    min-width: 80px; /* Increased min-width */
    box-sizing: border-box;
    margin-right: 3px; /* Slightly more margin */
  }
  .clock-time {
    font-family: 'Tahoma', 'Geneva', 'MS Sans Serif', sans-serif;
    font-size: 15px; /* Increased font size */
  }
</style>
