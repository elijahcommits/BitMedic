---
// src/layouts/Layout.astro
import { SEO } from 'astro-seo';

export interface Props {
  title: "BitMedic.io | BitMedic Helps!";
  description: "Empowering you to use your tech safely and effectively.";
  image?: "/images/bitmedic_logo2.png"
}

const { title, description, image } = Astro.props;
---
---
import WindowsToolbar from '../components/WindowsToolbar.astro';
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>BitMedic Helps!</title>
    <script is:inline>
      const setVhUnit = () => {
        if (typeof window !== 'undefined') {
          let vh = window.innerHeight * 0.01;
          document.documentElement.style.setProperty('--vh', `${vh}px`);
        }
      };
      setVhUnit();
      if (typeof window !== 'undefined') {
        window.addEventListener('resize', setVhUnit);
        window.addEventListener('orientationchange', setVhUnit);
      }
    </script>
  </head>
  <body>
    <slot />
    <WindowsToolbar />
  </body>
</html>

<style is:global>
  :root {
    --taskbar-height: 48px;
  }
  *, *::before, *::after { box-sizing: border-box; margin: 0; padding: 0; border: 0; }
  html { font-family: 'Tahoma', 'Geneva', 'MS Sans Serif', sans-serif; height: 100%; }
  body {
    display: flex;
    flex-direction: column;
    background-image: url('/images/simple_landscape_bg.svg');
    background-color: #87CEEB;
    background-size: cover;
    background-position: center center;
    background-repeat: no-repeat;
    background-attachment: fixed;
    min-height: calc(var(--vh, 1vh) * 100);
    margin: 0;
    padding-top: 25px;
    padding-bottom: var(--taskbar-height);
    user-select: none;
    -webkit-user-select: none;
  }
  @media (max-width: 600px) {
    body {
      padding-top: 15px;
      --taskbar-height: 40px;
    }
  }
</style>
