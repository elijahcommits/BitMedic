---
// src/layouts/Layout.astro
import WindowsToolbar from '../components/WindowsToolbar.astro';
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/BitMedic/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>BitMedic Helps!</title>
	</head>
	<body>
		<slot /> {/* Page content will go here, styled by index.astro */}
		<WindowsToolbar />
	</body>
</html>

<style is:global>
  /* Reset and Base Styles for Consistency */
  *,
  *::before,
  *::after {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
    border: 0;
    font-size: 100%;
    font: inherit;
    vertical-align: baseline;
  }

  html {
    line-height: 1.15;
    -webkit-text-size-adjust: 100%;
    font-family: 'Tahoma', 'Geneva', 'MS Sans Serif', sans-serif;
    height: 100%; /* Ensure HTML takes full height for body % height to work */
    -moz-osx-font-smoothing: grayscale;
    -webkit-font-smoothing: antialiased;
  }

  body {
    width: 100%;
    min-height: 100%; /* Make body at least full height of html */
    display: flex; /* Use flex to allow main content to grow */
    flex-direction: column;
    font-family: inherit;
    color: #000000;
    background-color: #DDD; /* Default, will be overridden by index.astro */
    text-rendering: optimizeLegibility;
    /* No explicit height or min-height: 100vh here, as index.astro will style it.
       This body is now a flex container for what index.astro puts in <slot />
       and the WindowsToolbar.
    */
  }

  /* Common Resets */
  article, aside, details, figcaption, figure,
  footer, header, hgroup, menu, nav, section {
    display: block;
  }
  ol, ul {
    list-style: none;
  }
  blockquote, q {
    quotes: none;
  }
  blockquote:before, blockquote:after, q:before, q:after {
    content: '';
    content: none;
  }
  table {
    border-collapse: collapse;
    border-spacing: 0;
  }
  img, picture, video, canvas, svg {
    display: block;
    max-width: 100%;
    height: auto;
  }
  input, button, textarea, select {
    font: inherit;
    color: inherit;
    margin: 0;
  }
  button {
    background: none;
    border: none;
    padding: 0;
    cursor: pointer;
  }
  a {
    color: inherit;
    text-decoration: none;
  }

  @media (prefers-reduced-motion: reduce) {
    html:focus-within { scroll-behavior: auto; }
    *, *::before, *::after {
      animation-duration: 0.01ms !important;
      animation-iteration-count: 1 !important;
      transition-duration: 0.01ms !important;
      scroll-behavior: auto !important;
    }
  }
</style>
