---
import WindowsToolbar from '../components/WindowsToolbar.astro';
import { SEO } from 'astro-seo';
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    # Favicons Begin
    <link rel="apple-touch-icon-precomposed" sizes="57x57" href="/apple-touch-icon-57x57.png" />
    <link rel="apple-touch-icon-precomposed" sizes="114x114" href="/apple-touch-icon-114x114.png" />
    <link rel="apple-touch-icon-precomposed" sizes="72x72" href="/apple-touch-icon-72x72.png" />
    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="/apple-touch-icon-144x144.png" />
    <link rel="apple-touch-icon-precomposed" sizes="60x60" href="/apple-touch-icon-60x60.png" />
    <link rel="apple-touch-icon-precomposed" sizes="120x120" href="/apple-touch-icon-120x120.png" />
    <link rel="apple-touch-icon-precomposed" sizes="76x76" href="/apple-touch-icon-76x76.png" />
    <link rel="apple-touch-icon-precomposed" sizes="152x152" href="/apple-touch-icon-152x152.png" />
    <link rel="icon" type="image/png" href="/favicon-196x196.png" sizes="196x196" />
    <link rel="icon" type="image/png" href="/favicon-96x96.png" sizes="96x96" />
    <link rel="icon" type="image/png" href="/favicon-32x32.png" sizes="32x32" />
    <link rel="icon" type="image/png" href="/favicon-16x16.png" sizes="16x16" />
    <link rel="icon" type="image/png" href="/favicon-128.png" sizes="128x128" />
    <meta name="application-name" content="BitMedic.io | BitMedic Helps!"/>
    <meta name="msapplication-TileColor" content="#FFFFFF" />
    <meta name="msapplication-TileImage" content="/mstile-144x144.png" />
    <meta name="msapplication-square70x70logo" content="/mstile-70x70.png" />
    <meta name="msapplication-square150x150logo" content="/mstile-150x150.png" />
    <meta name="msapplication-wide310x150logo" content="/mstile-310x150.png" />
    <meta name="msapplication-square310x310logo" content="/mstile-310x310.png" />
    <meta name="msapplication-notification" content="frequency=30;polling-uri=https://notifications.buildmypinnedsite.com/?feed=https://rss.beehiiv.com/feeds/9m1re8zjWF.xml&amp;id=1;polling-uri2=https://notifications.buildmypinnedsite.com/?feed=https://rss.beehiiv.com/feeds/9m1re8zjWF.xml&amp;id=2;polling-uri3=https://notifications.buildmypinnedsite.com/?feed=https://rss.beehiiv.com/feeds/9m1re8zjWF.xml&amp;id=3;polling-uri4=https://notifications.buildmypinnedsite.com/?feed=https://rss.beehiiv.com/feeds/9m1re8zjWF.xml&amp;id=4;polling-uri5=https://notifications.buildmypinnedsite.com/?feed=https://rss.beehiiv.com/feeds/9m1re8zjWF.xml&amp;id=5;cycle=1" />
    # Favicons End

    <meta name="generator" content={Astro.generator} />

    <SEO
      title="BitMedic.io | BitMedic Helps!"
      description="Empowering you to use your technology safely and effectively."
      canonical="https://www.bitmedic.io/"
      openGraph={{
        basic: {
          title: "BitMedic.io | BitMedic Helps!",
          type: "website",
          image: "https://www.bitmedic.io/images/bitmedic_logo2-1200x630-opengraph.png",
          url: "https://www.bitmedic.io/",
        },
        image: {
          alt: "the BitMedic logo, created by Elijah",
          width: 1200,
          height: 630,
        },
      }}
      twitter={{
        card: "summary_large_image",
        site: "@bitmedicio",
      }}
    />

    <script is:inline>
      const setVhUnit = () => {
        if (typeof window !== 'undefined') {
          let vh = window.innerHeight * 0.01;
          document.documentElement.style.setProperty('--vh', `${vh}px`);
        }
      };
      setVhUnit();
      if (typeof window !== 'undefined') {
        window.addEventListener('resize', setVhUnit);
        window.addEventListener('orientationchange', setVhUnit);
      }
    </script>
  </head>
  <body>
    <slot />
    <WindowsToolbar />
  </body>
</html>

<style is:global>
  :root {
    --taskbar-height: 48px;
  }
  *, *::before, *::after { box-sizing: border-box; margin: 0; padding: 0; border: 0; }
  html { font-family: 'Tahoma', 'Geneva', 'MS Sans Serif', sans-serif; height: 100%; }
  body {
    display: flex;
    flex-direction: column;
    background-image: url('/images/simple_landscape_bg.svg');
    background-color: #87CEEB;
    background-size: cover;
    background-position: center center;
    background-repeat: no-repeat;
    background-attachment: fixed;
    min-height: calc(var(--vh, 1vh) * 100);
    margin: 0;
    padding-top: 25px;
    padding-bottom: var(--taskbar-height);
    user-select: none;
    -webkit-user-select: none;
  }
  @media (max-width: 600px) {
    body {
      padding-top: 15px;
      --taskbar-height: 40px;
    }
  }
</style>
