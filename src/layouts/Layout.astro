---
import WindowsToolbar from '../components/WindowsToolbar.astro';
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>BitMedic Helps!</title>
    <script is:inline>
      const setVhUnit = () => {
        if (typeof window !== 'undefined') {
          let vh = window.innerHeight * 0.01;
          document.documentElement.style.setProperty('--vh', `${vh}px`);
        }
      };
      setVhUnit();
      if (typeof window !== 'undefined') {
        window.addEventListener('resize', setVhUnit);
        window.addEventListener('orientationchange', setVhUnit);
      }
    </script>
  </head>
  <body>
    <slot />
    <WindowsToolbar />
  </body>
</html>

<style is:global>
  :root {
    /* UPDATED: Set to the default height from your toolbar component */
    --taskbar-height: 48px;
  }
  
  /* Your existing CSS reset */
  *, *::before, *::after { box-sizing: border-box; margin: 0; padding: 0; border: 0; }
  html { font-size: 100%; font-family: 'Tahoma', 'Geneva', 'MS Sans Serif', sans-serif; line-height: 1.15; -webkit-text-size-adjust: 100%; height: 100%; -moz-osx-font-smoothing: grayscale; -webkit-font-smoothing: antialiased; scroll-behavior: smooth; }
  
  /* Body styles moved here from index.astro for better organization */
  body {
    display: flex;
    flex-direction: column;
    background-image: url('/images/simple_landscape_bg.svg');
    background-color: #87CEEB;
    background-size: cover;
    background-position: center center;
    background-repeat: no-repeat;
    background-attachment: fixed;
    /* This calculation correctly sets the body height */
    min-height: calc(var(--vh, 1vh) * 100);
    margin: 0;
    padding-top: 25px;
    padding-bottom: var(--taskbar-height); /* Ensure body has padding for the taskbar */
    user-select: none;
    -webkit-user-select: none;
  }
  
  /* Other styles remain the same */
  div, span, p, a, img, button, etc... { /* all other reset styles */ }
  
  @media (max-width: 600px) {
    body {
      padding-top: 15px;
      /* On smaller screens, update the variable to match the toolbar's height */
      --taskbar-height: 40px;
    }
  }
</style>