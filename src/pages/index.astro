---
// src/pages/index.astro
import Layout from '../layouts/Layout.astro';
---

<Layout title="BitMedic Helps!">
  <main class="desktop-area">
    <div class="desktop-icons-container">
      <a href="/BitMedic/about/" class="desktop-icon">
        <img src="/BitMedic/icons/about_icon.svg" alt="About BitMedic" />
        <span>About</span>
      </a>
      <a href="/BitMedic/contact/" class="desktop-icon">
        <img src="/BitMedic/icons/contact_icon.svg" alt="Contact BitMedic" />
        <span>Contact</span>
      </a>
      <a href="/BitMedic/tech/" class="desktop-icon">
        <img src="/BitMedic/icons/tech_icon.svg" alt="Recommended Tech" />
        <span>Recommended<br />Tech</span>
      </a>
      <a href="/BitMedic/merch/" class="desktop-icon">
        <img src="/BitMedic/icons/merch_icon.svg" alt="BitMedic Merch" />
        <span>Merch</span>
      </a>
      {/* Recycle Bin - for now, not linking anywhere specific, but styled as an icon */}
      <div class="desktop-icon">
        <img src="/BitMedic/icons/recycle_bin_icon.svg" alt="Recycle Bin" />
        <span>Recycle Bin</span>
      </div>
    </div>

    <div style="max-width: 1000px; width: 100%; box-sizing: border-box; border: 2px outset #C0C0C0; background-color: #F0F0F0; font-family: 'Tahoma', 'Geneva', sans-serif; font-size: 0.7rem; box-shadow: 5px 5px 10px rgba(0,0,0,0.3); margin: 20px auto; position: relative; z-index: 10;">
        <div style="background-color: #0058A8; color: white; padding: 5px; font-weight: bold; display: flex; justify-content: space-between; align-items: center;">
            <span style="margin-left: 5px;">BitMedic to the Rescue!</span>
            <a href="https://search.brave.com/" target="_blank" rel="noopener noreferrer"
               style="font-family: 'Verdana', 'Arial', sans-serif; background-color: #C0C0C0; border: 1px outset white; padding: 0px 4px; font-size: 14px; margin-right: 3px; cursor: pointer; color: black; line-height: 1; text-decoration: none;">
               X
            </a>
        </div>
        <div style="padding: 20px; display: flex; align-items: flex-start;">
            <div style="margin-right: 15px; font-size: 30px; color: #FFCC00;">
                ⚠️
            </div>
            <div style="flex-grow: 1;">
                <p style="font-size: 1rem; margin-top: 0; margin-bottom: 20px; line-height: 1.4; color: black;">
                    Our dedicated experts are ready to tackle whatever’s causing you grief, all remotely!<br><br>No need to let anyone into your home or haul your computer into some shop.<br>You reach out, we connect, your computer runs better.<br><br><em>Just like that.</em>
                </p>
                <div style="text-align: center;">
                    {/* TODO: Update this "Get Help!" link later! */}
                    <a href="https://google.com" target="_blank" rel="noopener noreferrer" style="background-color: #E1E1E1; border: 1px outset #C0C0C0; padding: 5px 20px; font-family: 'Tahoma', 'Geneva', sans-serif; font-size: 1.5rem; color: black; text-decoration: none; cursor: pointer; display: inline-block;">
                        Get Help!
                    </a>
                </div>
            </div>
        </div>
    </div>
  </main>

  {/* Global styles for the body, specific to this page's desired "desktop" look */}
  <style is:global>
    body {
      display: flex;
      flex-direction: column;
      background-image: url('/BitMedic/images/simple_landscape_bg.svg');
      background-color: #87CEEB;
      background-size: cover;
      background-position: center center;
      background-repeat: no-repeat;
      background-attachment: fixed;
      min-height: 100vh;
      margin: 0;
      padding-top: 25px;

      user-select: none;
      -webkit-user-select: none;
      -moz-user-select: none;
      -ms-user-select: none;
    }
  </style>

  {/* Scoped styles for index.astro page elements */}
  <style>
    .desktop-area {
      padding: 20px;
      width: 100%;
      box-sizing: border-box;
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    .desktop-icons-container {
      display: flex;
      flex-wrap: wrap;
      gap: 35px;
      margin-bottom: 40px;
      justify-content: flex-start;
      width: 100%;
      max-width: 1000px;
      padding-left: 15px;
    }

    .desktop-icon {
      display: flex;
      flex-direction: column;
      align-items: center;
      width: 120px;
      text-align: center;
      text-decoration: none;
      font-family: 'Tahoma', 'Geneva', 'MS Sans Serif', sans-serif;
      font-size: 14px;
      cursor: pointer;
      padding: 8px 5px;
      border: 1px solid transparent;
      word-wrap: break-word;
      margin-bottom: 15px;
    }

    .desktop-icon:hover span,
    .desktop-icon:focus-visible span {
      background-color: #0058a8;
      color: white;
    }

    .desktop-icon img {
      width: 72px;
      height: 72px;
      object-fit: contain;
      margin-bottom: 8px;
    }

    .desktop-icon span {
      display: inline-block;
      line-height: 1.3;
      max-width: 100%;
      word-wrap: break-word;

      background-color: white;
      color: black;
      padding: 2px 5px;
      border-radius: 3px; /* Slightly more rounded corners */
      box-shadow: 1px 1px 1px rgba(0,0,0,0.1);
      /* min-height: 2.6em; -- Removed to allow natural height for single/double lines */
    }
  </style>
</Layout>
