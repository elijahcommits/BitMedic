---
// src/pages/index.astro
import Layout from '../layouts/Layout.astro';
---

<Layout title="BitMedic Helps!">
  <main class="desktop-area">
    <div class="desktop-icons-container">
      <a href="/BitMedic/about/" class="desktop-icon">
        <img src="/BitMedic/icons/about_icon.svg" alt="About BitMedic" />
        <span>About</span>
      </a>
      <a href="/BitMedic/contact/" class="desktop-icon">
        <img src="/BitMedic/icons/contact_icon.svg" alt="Contact BitMedic" />
        <span>Contact</span>
      </a>
      <a href="/BitMedic/tech/" class="desktop-icon">
        <img src="/BitMedic/icons/tech_icon.svg" alt="Recommended Tech" />
        <span>Recommended<br />Tech</span>
      </a>
      <a href="/BitMedic/merch/" class="desktop-icon">
        <img src="/BitMedic/icons/merch_icon.svg" alt="BitMedic Merch" />
        <span>Merch</span>
      </a>
      <div class="desktop-icon">
        <img src="/BitMedic/icons/recycle_bin_icon.svg" alt="Recycle Bin" />
        <span>Recycle Bin</span>
      </div>
    </div>

    <div class="dialogue-box">
        <div class="dialogue-title-bar">
            <span>BitMedic to the Rescue!</span> {/* Removed margin-left as flexbox handles spacing */}
            <a href="https://search.brave.com/" target="_blank" rel="noopener noreferrer" class="dialogue-close-button">
               X
            </a>
        </div>
        <div class="dialogue-content">
            <div class="dialogue-icon">
                ⚠️
            </div>
            <div class="dialogue-text-area">
                <p class="dialogue-paragraph">
                    Our dedicated experts are ready to tackle whatever’s causing you grief, all remotely!<br><br>No need to let anyone into your home or haul your computer into some shop.<br>You reach out, we connect, your computer runs better.<br><br><em>Just like that.</em>
                </p>
                <div class="dialogue-button-container">
                    <a href="https://google.com" target="_blank" rel="noopener noreferrer" class="get-help-button">
                        Get Help!
                    </a>
                </div>
            </div>
        </div>
    </div>
  </main>

  <style is:global>
    body {
      display: flex;
      flex-direction: column;
      background-image: url('/BitMedic/images/simple_landscape_bg.svg');
      background-color: #87CEEB;
      background-size: cover;
      background-position: center center;
      background-repeat: no-repeat;
      background-attachment: fixed;
      min-height: 100vh;
      margin: 0;
      padding-top: 25px;
      padding-bottom: 60px;
      user-select: none;
      -webkit-user-select: none;
      -moz-user-select: none;
      -ms-user-select: none;
    }

    @media (max-width: 600px) {
      body {
        padding-top: 15px;
        padding-bottom: 50px;
      }
    }
  </style>

  <style>
    .desktop-area {
      padding: 20px;
      width: 100%;
      box-sizing: border-box;
      display: flex;
      flex-direction: column;
      align-items: center;
      flex-grow: 1;
    }

    .desktop-icons-container {
      display: flex;
      flex-wrap: wrap;
      gap: 35px;
      margin-bottom: 40px;
      justify-content: flex-start;
      width: 100%;
      max-width: 1000px;
      padding-left: 15px;
      box-sizing: border-box;
    }

    .desktop-icon {
      display: flex;
      flex-direction: column;
      align-items: center;
      width: 120px;
      text-align: center;
      text-decoration: none;
      font-family: 'Tahoma', 'Geneva', 'MS Sans Serif', sans-serif;
      font-size: 14px;
      cursor: pointer;
      padding: 8px 5px;
      border: 1px solid transparent;
      word-wrap: break-word;
      margin-bottom: 15px;
      box-sizing: border-box;
    }

    .desktop-icon:hover span,
    .desktop-icon:focus-visible span {
      background-color: #0058a8;
      color: white;
    }

    .desktop-icon img {
      width: 72px;
      height: 72px;
      object-fit: contain;
      margin-bottom: 8px;
      box-sizing: border-box; /* Just in case */
    }

    .desktop-icon span {
      display: inline-block;
      line-height: 1.3;
      max-width: 100%;
      word-wrap: break-word;
      background-color: white;
      color: black;
      padding: 2px 5px;
      border-radius: 3px;
      box-shadow: 1px 1px 1px rgba(0,0,0,0.1);
      box-sizing: border-box;
    }

    /* Styles for Dialogue Box */
    .dialogue-box {
      max-width: 1000px;
      width: 100%;
      margin: 20px auto; /* Centers it if desktop-area doesn't align-items: center */
      box-sizing: border-box;
      border: 2px outset #C0C0C0;
      background-color: #F0F0F0;
      font-family: 'Tahoma', 'Geneva', 'MS Sans Serif', sans-serif;
      font-size: 0.8rem; /* Slightly larger base for dialogue box */
      box-shadow: 5px 5px 10px rgba(0,0,0,0.3);
      position: relative;
      z-index: 10;
    }
    .dialogue-title-bar {
      background-color: #0058A8;
      color: white;
      padding: 5px 8px; /* Added horizontal padding */
      font-weight: bold;
      display: flex;
      justify-content: space-between;
      align-items: center;
      line-height: 1.2; /* Ensure consistent line height */
      box-sizing: border-box;
    }
    .dialogue-close-button {
      font-family: 'Verdana', 'Arial', sans-serif;
      background-color: #C0C0C0;
      border: 1px outset white;
      padding: 1px 5px; /* Adjusted padding */
      font-size: 14px;
      cursor: pointer;
      color: black;
      line-height: 1; /* Keep tight for the 'X' */
      text-decoration: none;
      user-select: none;
      -webkit-user-select: none;
    }
    .dialogue-content {
      padding: 20px;
      display: flex;
      align-items: flex-start;
      box-sizing: border-box;
    }
    .dialogue-icon {
      margin-right: 15px;
      font-size: 30px;
      color: #FFCC00;
      line-height: 1; /* Align emoji better */
    }
    .dialogue-text-area {
      flex-grow: 1;
    }
    .dialogue-paragraph { /* Added class for more specific styling */
      font-size: 1rem;
      margin-top: 0;
      margin-bottom: 20px;
      line-height: 1.4;
      color: black;
    }
    .dialogue-button-container {
      text-align: center;
      margin-top: 10px; /* Added margin */
    }
    .get-help-button {
      appearance: none; /* Reset button appearance */
      -webkit-appearance: none;
      background-color: #E1E1E1;
      border: 1px outset #C0C0C0;
      padding: 8px 25px; /* Slightly larger padding */
      font-family: 'Tahoma', 'Geneva', 'MS Sans Serif', sans-serif;
      font-size: 1.5rem;
      line-height: 1.2; /* Added line height */
      color: black;
      text-decoration: none;
      cursor: pointer;
      display: inline-block;
      user-select: none;
      -webkit-user-select: none;
    }
    .get-help-button:active {
      border-style: inset;
      padding: 9px 24px 7px 26px; /* Pressed effect */
    }


    /* --- Media Query for Smaller Screens --- */
    @media (max-width: 600px) {
      .desktop-area {
        padding: 10px;
      }
      .desktop-icons-container {
        gap: 15px;
        margin-bottom: 20px;
        padding-left: 5px;
        justify-content: space-around;
      }
      .desktop-icon {
        width: 80px;
        font-size: 11px;
        padding: 4px;
        margin-bottom: 10px;
      }
      .desktop-icon img {
        width: 48px;
        height: 48px;
        margin-bottom: 4px;
      }
      .desktop-icon span {
        padding: 1px 3px;
        line-height: 1.2;
      }

      .dialogue-box {
        font-size: 0.75rem; /* Slightly smaller base for dialogue on mobile */
      }
      .dialogue-title-bar {
        padding: 4px 6px;
      }
      .dialogue-close-button {
        font-size: 12px;
        padding: 0px 3px;
      }
      .dialogue-content {
        padding: 15px;
        flex-direction: column;
        align-items: center;
      }
      .dialogue-icon {
        margin-right: 0;
        margin-bottom: 10px;
        font-size: 24px;
      }
      .dialogue-paragraph {
        font-size: 0.9rem;
        text-align: left;
      }
      .get-help-button {
        font-size: 1.2rem;
        padding: 6px 18px;
      }
      .get-help-button:active {
        padding: 7px 17px 5px 19px;
      }
    }
  </style>
</Layout>
