---
import Layout from '../layouts/Layout.astro';
---
<Layout title="BitMedic Helps!">
  <main class="desktop-area">
    <div class="desktop-icons-container">
      <a href="/about/" class="desktop-icon">
        <img src="/icons/about_icon.svg" alt="About BitMedic" />
        <span>About</span>
      </a>
      <a href="https://docs.google.com/forms/d/e/1FAIpQLSe87Vmx4OSsn1eQ8zh0XDLioe3Q-O6dLpIm2Ov_m60BSitE7A/viewform?usp=header" target="_blank" rel="noopener noreferrer" class="desktop-icon">
        <img src="/icons/contact_icon.svg" alt="Contact BitMedic" />
        <span>Contact</span>
      </a>
      <a href="/tech/" class="desktop-icon">
        <img src="/icons/tech_icon.svg" alt="Recommended Tech" />
        <span>Recommended<br />Tech</span>
      </a>
      <a href="/merch/" class="desktop-icon">
        <img src="/icons/merch_icon.svg" alt="BitMedic Merch" />
        <span>Merch</span>
      </a>
      <div class="desktop-icon">
        <img src="/icons/recycle_bin_icon.svg" alt="Recycle Bin" />
        <span>Recycle Bin</span>
      </div>
    </div>

    <div class="dialogue-box">
        <div class="dialogue-title-bar">
            <span>BitMedic to the Rescue!</span>
            <a href="#" class="dialogue-close-button" aria-label="Trigger BSOD">X</a>
        </div>
        <div class="dialogue-content">
            <div class="dialogue-icon">⚠️</div>
            <div class="dialogue-text-area">
                <p class="dialogue-paragraph">
                    Our dedicated experts are ready to tackle whatever's causing you grief, all remotely!<br><br>No need to let anyone into your home or haul your computer into some shop.<br>You reach out, we connect, your computer runs better.<br><br><strong><em>Just like that.</em></strong>
                </p>
                <div class="dialogue-button-container">
                    <a href="https://docs.google.com/forms/d/e/1FAIpQLSe87Vmx4OSsn1eQ8zh0XDLioe3Q-O6dLpIm2Ov_m60BSitE7A/viewform?usp=header" target="_blank" rel="noopener noreferrer" class="get-help-button">
                        Get Help!
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div id="bsod-screen" class="bsod-screen" style="display:none;">
      </div>
  </main>

  <style>
    .desktop-area {
      width: 100%;
      box-sizing: border-box;
      display: flex;
      flex-direction: column;
      align-items: center;
      flex-grow: 1;
    }

    .desktop-icons-container {
      display: flex;
      flex-direction: row; /* UPDATED: Changed to row for better wrapping */
      flex-wrap: wrap;
      gap: 20px;
      margin-bottom: 20px;
      justify-content: flex-start;
      width: 100%;
      padding: 20px;
      box-sizing: border-box;
    }

    .desktop-icon {
      display: flex;
      flex-direction: column;
      align-items: center;
      width: 120px;
      text-align: center;
      text-decoration: none;
      font-size: 14px;
      cursor: pointer;
      padding: 8px 5px;
      border: 1px solid transparent;
    }
    
    .desktop-icon img { width: 72px; height: 72px; margin-bottom: 8px; }
    .desktop-icon span { background-color: white; color: black; padding: 2px 5px; border-radius: 3px; }
    .desktop-icon:hover span,
    .desktop-icon:focus-visible span { background-color: #0058a8; color: white; }

    /* --- UPDATED DIALOGUE BOX STYLES --- */
    .dialogue-box {
      /* This is the core fix */
      position: fixed;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      
      width: clamp(320px, 90%, 740px); /* Responsive width */
      /* Constrain height by viewport and taskbar */
      max-height: calc(100vh - var(--taskbar-height) - 40px); /* 20px top/bottom margin */
      z-index: 9990;

      /* Internal layout */
      display: flex;
      flex-direction: column;
      
      /* Your existing styles */
      box-sizing: border-box;
      border: 2px outset #C0C0C0;
      background-color: #F0F0F0;
      font-family: 'Tahoma', 'Geneva', 'MS Sans Serif', sans-serif;
      box-shadow: 5px 5px 10px rgba(0,0,0,0.3);
    }
    
    .dialogue-title-bar {
      background-color: #0058A8;
      color: white;
      padding: 5px 8px;
      font-weight: bold;
      display: flex;
      justify-content: space-between;
      align-items: center;
      flex-shrink: 0; /* Prevents the title bar from shrinking */
    }

    .dialogue-content {
      padding: 20px;
      display: flex;
      align-items: flex-start;
      /* This makes the content area scrollable if it overflows */
      overflow-y: auto;
    }

    /* All other dialogue styles (.dialogue-icon, .get-help-button, etc.) remain the same */
    .dialogue-close-button { font-family: 'Verdana', 'Arial', sans-serif; background-color: #C0C0C0; border: 1px outset white; padding: 1px 5px; cursor: pointer; color: black; text-decoration: none; }
    .dialogue-icon { margin-right: 15px; font-size: 30px; }
    .dialogue-text-area { flex-grow: 1; }
    .dialogue-paragraph { font-size: 1.15rem; margin-bottom: 20px; line-height: 1.5; }
    .dialogue-button-container { text-align: center; }
    .get-help-button { appearance: none; -webkit-appearance: none; background-color: #E1E1E1; border: 1px outset #C0C0C0; padding: 8px 25px; font-size: 1.5rem; color: black; text-decoration: none; cursor: pointer; }
    .get-help-button:active { border-style: inset; }


    /* --- Media Query for Smaller Screens --- */
    @media (max-width: 768px) {
      .desktop-icons-container {
        gap: 15px;
        justify-content: center; /* Center icons on mobile */
      }
      .desktop-icon { width: 95px; }
      .desktop-icon img { width: 48px; height: 48px; }
      
      .dialogue-box {
        /* On mobile, make it take up more of the screen */
        width: 95%;
        max-height: calc(100vh - var(--taskbar-height) - 20px); /* 10px top/bottom margin */
      }
    }
    
    /* BSOD styles remain the same */
    .bsod-screen { /* ... */ }
  </style>
</Layout>

