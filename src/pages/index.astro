---
// src/pages/index.astro
import Layout from '../layouts/Layout.astro';
---

<Layout title="BitMedic Helps!">
  <main class="desktop-area">
    <div class="desktop-icons-container">
      <a href="/BitMedic/about/" class="desktop-icon">
        <img src="/BitMedic/icons/about_icon.svg" alt="About BitMedic" />
        <span>About</span>
      </a>
      <a href="https://docs.google.com/forms/d/e/1FAIpQLSe87Vmx4OSsn1eQ8zh0XDLioe3Q-O6dLpIm2Ov_m60BSitE7A/viewform?usp=header" target="_blank" rel="noopener noreferrer" class="desktop-icon">
        <img src="/BitMedic/icons/contact_icon.svg" alt="Contact BitMedic" />
        <span>Contact</span>
      </a>
      <a href="/BitMedic/tech/" class="desktop-icon">
        <img src="/BitMedic/icons/tech_icon.svg" alt="Recommended Tech" />
        <span>Recommended<br />Tech</span>
      </a>
      <a href="/BitMedic/merch/" class="desktop-icon">
        <img src="/BitMedic/icons/merch_icon.svg" alt="BitMedic Merch" />
        <span>Merch</span>
      </a>
      {/* Recycle Bin - for now, not linking anywhere specific, but styled as an icon */}
      <div class="desktop-icon">
        <img src="/BitMedic/icons/recycle_bin_icon.svg" alt="Recycle Bin" />
        <span>Recycle Bin</span>
      </div>
    </div>

    <div class="dialogue-box" style="margin: 20px auto;">
        <div class="dialogue-title-bar">
            <span>BitMedic to the Rescue!</span>
            {/* Ensure this 'X' button has the class .dialogue-close-button for the JS */}
            <a href="#" class="dialogue-close-button" aria-label="Trigger BSOD">
               X
            </a>
        </div>
        <div class="dialogue-content">
            <div class="dialogue-icon">
                ‚ö†Ô∏è
            </div>
            <div class="dialogue-text-area">
                <p class="dialogue-paragraph">
                    Our dedicated experts are ready to tackle whatever‚Äôs causing you grief, all remotely!<br><br>No need to let anyone into your home or haul your computer into some shop.<br>You reach out, we connect, your computer runs better.<br><br><strong><em>Just like that.</em></strong>
                </p>
                <div class="dialogue-button-container">
                    <a href="https://docs.google.com/forms/d/e/1FAIpQLSe87Vmx4OSsn1eQ8zh0XDLioe3Q-O6dLpIm2Ov_m60BSitE7A/viewform?usp=header" target="_blank" rel="noopener noreferrer" class="get-help-button">
                        Get Help!
                    </a>
                </div>
            </div>
        </div>
    </div>

    {/* BSOD Screen HTML (initially hidden) */}
    <div id="bsod-screen" class="bsod-screen" style="display:none;">
      <div class="bsod-content-wrapper">
        <p class="bsod-title">A "Problem" Has Been Detected<br /> (and BitMedic is here for it!)</p>
        <p>If this is the first time you've seen this screen, don't panic! It's just our way of saying we're serious about tackling PC issues... with a bit of fun.</p>
        <p>Your PC hasn't actually crashed. This is a simulation!</p>

        <p>To get actual help or just to chat, reach out:</p>
        <ul class="bsod-contact-info">
          <li>üìû Phone: (555) BIT-MEDC  [555-248-6332]</li>
          <li>üìß Email: help@bitmedic.online (Not real yet!)</li>
          <li>üåê Website: <a href="https://elicrab.com/BitMedic/" target="_blank" rel="noopener noreferrer">elicrab.com/BitMedic</a></li>
        </ul>

        <p>Totally Bogus Technical Information:</p>
        <p class="bsod-tech-info">
          *** STOP: 0x000SMILE (0xCHILLOUT, 0xWEGOTTHIS, 0xNOREALERROR, 0xCALLBITMEDIC)<br />
          *** BITMEDIC_EASTER_EGG_MODE_ENGAGED
        </p>

        <p class="bsod-restart-info">
          Click anywhere on this blue screen to make it go away.<br />
          (Or press ESC if you're feeling keyboardy!)
        </p>
      </div>
    </div>

  </main>

  {/* Global styles for the body */}
  <style is:global>
    body {
      display: flex;
      flex-direction: column;
      background-image: url('/BitMedic/images/simple_landscape_bg.svg');
      background-color: #87CEEB;
      background-size: cover;
      background-position: center center;
      background-repeat: no-repeat;
      background-attachment: fixed;
      min-height: calc(var(--vh, 1vh) * 100);
      margin: 0;
      padding-top: 25px;
      /* padding-bottom handled by .desktop-area */
      user-select: none;
      -webkit-user-select: none;
      -moz-user-select: none;
      -ms-user-select: none;
    }
    @media (max-width: 600px) {
      body {
        padding-top: 15px;
      }
    }
  </style>

  {/* Scoped styles for index.astro page elements */}
  <style>
    .desktop-area {
      padding: 20px 0;
      padding-bottom: 68px; /* For 48px toolbar + 20px margin */
      width: 100%;
      box-sizing: border-box;
      display: flex;
      flex-direction: column;
      align-items: center;
      flex-grow: 1;
    }

    .desktop-icons-container {
      display: flex;
      flex-wrap: wrap;
      gap: 35px;
      margin-bottom: 40px;
      justify-content: flex-start;
      width: 100%;
      /* max-width removed to allow icons to start from screen edge */
      padding-left: 25px;
      padding-right: 25px;
      box-sizing: border-box;
    }

    .desktop-icon {
      display: flex;
      flex-direction: column;
      align-items: center;
      width: 120px; /* Base width for container */
      text-align: center;
      text-decoration: none;
      font-family: 'Tahoma', 'Geneva', 'MS Sans Serif', sans-serif;
      font-size: 14px; /* Base font size for label */
      cursor: pointer;
      padding: 8px 5px;
      border: 1px solid transparent;
      word-wrap: break-word;
      margin-bottom: 15px;
      box-sizing: border-box;
    }

    .desktop-icon:hover span,
    .desktop-icon:focus-visible span {
      background-color: #0058a8;
      color: white;
    }

    .desktop-icon img {
      width: 72px; /* UPDATED: Reset to 72px */
      height: 72px; /* UPDATED: Reset to 72px */
      object-fit: contain;
      margin-bottom: 8px;
      box-sizing: border-box;
    }

    .desktop-icon span {
      display: inline-block;
      line-height: 1.3;
      max-width: 100%;
      word-wrap: break-word;
      background-color: white;
      color: black;
      padding: 2px 5px;
      border-radius: 3px;
      box-shadow: 1px 1px 1px rgba(0,0,0,0.1);
      box-sizing: border-box;
    }

    /* Styles for Dialogue Box */
    .dialogue-box {
      max-width: 740px;
      width: 100%;
      box-sizing: border-box;
      border: 2px outset #C0C0C0;
      background-color: #F0F0F0;
      font-family: 'Tahoma', 'Geneva', 'MS Sans Serif', sans-serif;
      font-size: 0.9rem;
      box-shadow: 5px 5px 10px rgba(0,0,0,0.3);
      position: relative;
      z-index: 10;
    }
    .dialogue-title-bar {
      background-color: #0058A8;
      color: white;
      padding: 5px 8px;
      font-weight: bold;
      font-size: 1rem;
      display: flex;
      justify-content: space-between;
      align-items: center;
      line-height: 1.2;
      box-sizing: border-box;
    }
    .dialogue-close-button {
      font-family: 'Verdana', 'Arial', sans-serif;
      background-color: #C0C0C0;
      border: 1px outset white;
      padding: 1px 5px;
      font-size: 1rem;
      cursor: pointer;
      color: black;
      line-height: 1;
      text-decoration: none;
      user-select: none;
      -webkit-user-select: none;
    }
    .dialogue-content {
      padding: 20px;
      display: flex;
      align-items: flex-start;
      box-sizing: border-box;
    }
    .dialogue-icon {
      margin-right: 15px;
      font-size: 30px;
      color: #FFCC00;
      line-height: 1;
    }
    .dialogue-text-area {
      flex-grow: 1;
    }
    .dialogue-paragraph {
      font-size: 1.15rem;
      margin-top: 0;
      margin-bottom: 20px;
      line-height: 1.5;
      color: black;
    }
    .dialogue-button-container {
      text-align: center;
      margin-top: 10px;
    }
    .get-help-button {
      appearance: none;
      -webkit-appearance: none;
      background-color: #E1E1E1;
      border: 1px outset #C0C0C0;
      padding: 8px 25px;
      font-family: 'Tahoma', 'Geneva', 'MS Sans Serif', sans-serif;
      font-size: 1.5rem;
      line-height: 1.2;
      color: black;
      text-decoration: none;
      cursor: pointer;
      display: inline-block;
      user-select: none;
      -webkit-user-select: none;
    }
    .get-help-button:active {
      border-style: inset;
      padding: 9px 24px 7px 26px;
    }

    /* --- Media Query for Smaller Screens --- */
    @media (max-width: 600px) {
      .desktop-area {
        padding: 10px 0;
        padding-bottom: 55px; /* For 40px mobile toolbar + 15px margin */
      }
      .desktop-icons-container {
        gap: 15px;
        margin-bottom: 20px;
        padding-left: 10px;
        padding-right: 10px;
        justify-content: flex-start;
      }
      .desktop-icon {
        width: 95px;
        font-size: 11px;
        padding: 4px;
        margin-bottom: 10px;
      }
      .desktop-icon img {
        width: 48px; /* Reverted to 48px for mobile */
        height: 48px;
        margin-bottom: 4px;
      }
      .desktop-icon span {
        padding: 1px 3px;
        line-height: 1.2;
      }
      .dialogue-box {
        font-size: 0.85rem;
        margin: 15px 10px;
        width: calc(100% - 20px);
      }
      .dialogue-title-bar { padding: 4px 6px; font-size: 0.9rem; }
      .dialogue-close-button { font-size: 0.9rem; padding: 0px 3px; }
      .dialogue-content { padding: 15px; flex-direction: column; align-items: center; }
      .dialogue-icon { margin-right: 0; margin-bottom: 10px; font-size: 26px; }
      .dialogue-paragraph { font-size: 1rem; line-height: 1.45; text-align: left; }
      .get-help-button { font-size: 1.3rem; padding: 6px 18px; }
      .get-help-button:active { padding: 7px 17px 5px 19px; }
    }

    /* BSOD Screen Styles */
    .bsod-screen { position: fixed; top: 0; left: 0; width: 100vw; height: 100vh; background-color: #0000AA; color: white; font-family: 'Lucida Console', 'Courier New', Courier, monospace; font-size: 16px; padding: 20px; box-sizing: border-box; z-index: 99999; text-align: left; overflow-y: auto; cursor: pointer; }
    .bsod-content-wrapper { max-width: 800px; margin: 0 auto; width: 100%; }
    .bsod-title { font-size: 1.5em; font-weight: bold; margin-top: 0; margin-bottom: 1.5em; text-align: center;}
    .bsod-screen p { margin-bottom: 1em; line-height: 1.4; }
    .bsod-contact-info { list-style: none; padding-left: 0; margin-bottom: 1.5em; font-size: 1.1em; }
    .bsod-contact-info li { margin-bottom: 0.5em; }
    .bsod-contact-info a { color: #FFFF80; text-decoration: underline; }
    .bsod-contact-info a:hover { color: #FFFFFF; }
    .bsod-tech-info { font-size: 0.9em; margin-top: 2.5em; word-break: break-all; }
    .bsod-restart-info { margin-top: 3em; text-align: center; font-weight: bold; font-size: 1.1em; }
    @media (max-width: 600px) { .bsod-screen { font-size: 14px; padding: 15px; } .bsod-title { font-size: 1.3em; margin-bottom: 1em; } .bsod-contact-info { font-size: 1em; margin-bottom: 1em; } .bsod-restart-info { font-size: 1em; margin-top: 2em; } }
  </style>
</Layout>

<script>
  function initializeBsodInteraction() {
    const closeButton = document.querySelector('.dialogue-box .dialogue-close-button');
    const bsodScreen = document.getElementById('bsod-screen');
    const dialogueBox = document.querySelector('.dialogue-box');
    if (closeButton && bsodScreen) {
      closeButton.addEventListener('click', function(event) {
        event.preventDefault();
        bsodScreen.style.display = 'block';
        if (dialogueBox) {
          dialogueBox.style.display = 'none';
        }
      });
      bsodScreen.addEventListener('click', function() {
        bsodScreen.style.display = 'none';
        if (dialogueBox) {
          dialogueBox.style.display = 'block';
        }
      });
      document.addEventListener('keydown', function(event) {
        if (event.key === 'Escape' && bsodScreen.style.display !== 'none') {
          bsodScreen.style.display = 'none';
          if (dialogueBox) {
            dialogueBox.style.display = 'block';
          }
        }
      });
    }
  }
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initializeBsodInteraction);
  } else {
    initializeBsodInteraction();
  }
</script>
